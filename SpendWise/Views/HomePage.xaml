<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpendWise.Views.HomePage"
             Title="SpendWise">
    <VerticalStackLayout Padding="20">
        <Label Text="Welcome to SpendWise" FontSize="Large" HorizontalOptions="Center" />
        <Label Text="Total Spent: $0.00" FontSize="Medium" />
        <Label Text="Remaining Budget: $0.00" FontSize="Medium" />
        <Button Text="Add Expense" Clicked="NavigateToAddExpense" />
        <Button Text="View Expenses" Clicked="NavigateToViewExpenses" />
    </VerticalStackLayout>
</ContentPage>
